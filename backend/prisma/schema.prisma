generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
  VIEWER
  HOD
  MANAGER
}

enum UutType {
  AS
  UT
  BB
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UutRecord {
  id           String   @id @default(uuid())
  serialNo     String   @unique
  challanNo    String
  uutInDate    DateTime
  customerName String
  customerCode String
  testTypeName String
  testTypeCode String
  projectName  String
  uutQty       Int
  uutType      UutType
  serialOfDay  Int
  uutCode      String   @unique
  createdById  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  srNo         Int?
  traceId      String?  @unique
  outs         UutOut[]

  @@unique([uutInDate, serialOfDay])
  @@index([uutInDate])
  @@index([customerCode])
  @@index([projectName])
  @@index([uutCode])
}

model UutOut {
  id          String    @id @default(uuid())
  uutRecordId String
  outQty      Int?
  outDate     DateTime?
  remarks     String?
  createdAt   DateTime  @default(now())
  uutRecord   UutRecord @relation(fields: [uutRecordId], references: [id])
}

model ControlRecord {
  id             String        @id @default(uuid())
  controlNo      String        @unique 
  uutRecordId    String
  uutRecord      UutRecord     @relation(fields: [uutRecordId], references: [id])
  projectName    String        
  serialNo       String        
  equipmentId    String?      
  testTypeName   String
  noOfSplits     Int           
  testStartDate  DateTime      
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  splits         ControlSplit[]
  @@index([controlNo])
  @@index([uutRecordId])
  @@index([testStartDate])
}

model ControlSplit {
  id              String      @id @default(uuid())
  controlRecordId String
  controlRecord   ControlRecord @relation(fields: [controlRecordId], references: [id])
  splitIndex      Int         
  serialStart     String     
  serialEnd       String    
  testStart       DateTime
  testEnd         DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  @@unique([controlRecordId, splitIndex])
  @@index([controlRecordId])
}

model EquipmentDetail {
  id           String @id @default(uuid())
  equipmentId  String @unique 
  serialNo     String?
}

