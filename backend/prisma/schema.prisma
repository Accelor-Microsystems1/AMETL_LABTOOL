generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  HOD
  ADMIN
  MANAGER
  TESTENGINEER
  JUNIORENGINEER
  CUSTOMER
  CEO
}

enum UutType {
  AS
  UT
  BB
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(JUNIORENGINEER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UutRecord {
  id           String   @id @default(uuid())
  serialNo     String   @unique
  challanNo    String
  uutInDate    DateTime
  customerName String
  customerCode String
  testTypeName String
  testTypeCode String
  projectName  String
  uutQty       Int
  uutType      UutType
  serialOfDay  Int
  uutCode      String   @unique
  createdById  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  srNo         Int?
  traceId      String?  @unique
  outs         UutOut[]

  @@unique([uutInDate, serialOfDay])
  @@index([uutInDate])
  @@index([customerCode])
  @@index([projectName])
  @@index([uutCode])
}

model UutOut {
  id          String    @id @default(uuid())
  uutRecordId String
  outQty      Int?
  outDate     DateTime?
  remarks     String?
  createdAt   DateTime  @default(now())
  uutRecord   UutRecord @relation(fields: [uutRecordId], references: [id])
}
