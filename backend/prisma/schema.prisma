generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  HOD
  ADMIN
  MANAGER
  TESTENGINEER
  JUNIORENGINEER
  CUSTOMER
  CEO
}

enum UutType {
  AS
  UT
  BB
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(JUNIORENGINEER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UutRecord {
  id           String   @id @default(uuid())
  serialNo     String   @unique
  challanNo    String
  uutInDate    DateTime
  customerName String
  customerCode String
  testTypeName String
  testTypeCode String
  projectName  String
  uutQty       Int
  uutType      UutType
  serialOfDay  Int
  uutCode      String   @unique
  createdById  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  srNo         Int?
  traceId      String?  @unique
  outs         UutOut[]

  @@unique([uutInDate, serialOfDay])
  @@index([uutInDate])
  @@index([customerCode])
  @@index([projectName])
  @@index([uutCode])
}

model UutOut {
  id          String    @id @default(uuid())
  uutRecordId String
  outQty      Int?
  outDate     DateTime?
  remarks     String?
  createdAt   DateTime  @default(now())
  uutRecord   UutRecord @relation(fields: [uutRecordId], references: [id])
}

model TestRequest {
  id        Int      @id @default(autoincrement()) 
  companyName    String
  companyAddress String
  contactPerson  String
  contactNumber  String
  customerEmail  String  
  uutName           String
  noOfUUT            String
  dimension          String
  weight             String
  uutSerialNo        String
  calculatedQuantity Int?
  repeatTest         String   @default("no") 
  previousRefNo      String?
  testLevel          String 
  testName           String
  testSpecification  String   @db.Text
  testStandard       String
  specialRequirement String?  
  customerRepName    String
  customerRepDate    DateTime
  qaRepName          String?
  qaRepDate          DateTime?  
  status            RequestStatus @default(PENDING)
  referenceNumber   String?       @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  
  @@index([companyName])
  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
  @@index([testLevel])
}

