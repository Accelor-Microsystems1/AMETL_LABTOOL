generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  HOD
  MANAGER
  ADMIN
  USER
  VIEWER
}

model User {
  id  String @id @default(uuid())
  email String @unique
  password String 
  name String
  role Role @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UutType {
  AS
  UT 
  BB
}

model UutRecord {
  id String @id @default(uuid())
  srNo Int?
  traceId  String? @unique
  serialNo String
  challanNo String
  uutInDate DateTime 
  customerName String
  customerCode String
  testTypeName String
  testTypeCode String
  projectName String
  uutQty Int
  uutType UutType
  inDateDay DateTime
  serialOfDay Int
  uutCode String @unique
  outs UutOut[]
  

  createdById String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([inDateDay, serialOfDay])
  @@index([uutInDate])
  @@index([customerCode])
  @@index([projectName])
  @@index([uutCode])
}

model UutOut {
  id String @id @default(uuid())
  uutRecordId String
  uutRecord UutRecord @relation(fields: [uutRecordId], references: [id])

  outQty Int?
  outDate DateTime?
  remarks String?

  createdAt DateTime @default(now())
}
