generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  HOD
  ADMIN
  MANAGER
  TESTENGINEER
  JUNIORENGINEER
  CUSTOMER
  CEO
}

enum UutType {
  AS
  UT
  BB
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum EquipmentStatus {
  ACTIVE
  INACTIVE
  UNDER_MAINTENANCE
  UNDER_CALIBRATION
}

enum CalibrationResult {
  PASS
  FAIL
  CONDITIONAL_PASS
}

enum PerformanceResult {
  PASS
  FAIL
  OBSERVATION
}

enum MaintenanceStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  OVERDUE
  CANCELLED
}

enum IncidentStatus {
  OPEN
  UNDER_INVESTIGATION
  RESOLVED
  CLOSED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(JUNIORENGINEER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UutRecord {
  id           String   @id @default(uuid())
  serialNo     String   @unique
  challanNo    String
  uutInDate    DateTime
  customerName String
  customerCode String
  testTypeName String
  testTypeCode String
  projectName  String
  uutQty       Int
  uutType      UutType
  serialOfDay  Int
  uutCode      String   @unique
  createdById  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  srNo         Int?
  traceId      String?  @unique
  outs         UutOut[]

  @@unique([uutInDate, serialOfDay])
  @@index([uutInDate])
  @@index([customerCode])
  @@index([projectName])
  @@index([uutCode])
}

model UutOut {
  id          String    @id @default(uuid())
  uutRecordId String
  outQty      Int?
  outDate     DateTime?
  remarks     String?
  createdAt   DateTime  @default(now())
  uutRecord   UutRecord @relation(fields: [uutRecordId], references: [id])
}

model Project {
  id          Int             @id @default(autoincrement())
  projectName String          @unique @db.VarChar(100)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())

  projectTests ProjectTest[]
}

model Test {
  id          Int             @id @default(autoincrement())
  testName    String          @unique @db.VarChar(100)
  testCode    String?         @db.VarChar(50)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())
  projectTests ProjectTest[]
}

model ProjectTest {
  id            Int       @id @default(autoincrement())
  projectId     Int
  testId        Int
  specification String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  test    Test    @relation(fields: [testId], references: [id], onDelete: Cascade)
  @@unique([projectId, testId]) 
}

model TestRequest {
  id        Int      @id @default(autoincrement()) 
  companyName    String
  companyAddress String
  contactPerson  String
  contactNumber  String
  customerEmail  String  
  uutName           String
  noOfUUT            String
  dimension          String
  weight             String
  uutSerialNo        String
  calculatedQuantity Int?
  repeatTest         String   @default("no") 
  previousRefNo      String?
  testLevel          String 
  testName           String
  testSpecification  String   @db.Text
  testStandard       String
  specialRequirement String?  
  customerRepName    String
  customerRepDate    DateTime
  qaRepName          String?
  qaRepDate          DateTime?  
  
   // ADD THESE MISSING FIELDS ðŸ‘‡
  status              String    @default("PENDING")
  approvedBy          String?
  approvedAt          DateTime?
  rejectedBy          String?
  rejectedAt          DateTime?
  rejectionReason     String?


  referenceNumber   String?       @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  
  @@index([companyName])
  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
  @@index([testLevel])
}

model Equipment {
  id                        String   @id @default(cuid())
  equipmentId               String   @unique @map("equipment_id")
  equipmentName             String   @map("equipment_name")
  manufacturerName          String   @map("manufacturer_name")
  manufacturerModel         String   @map("manufacturer_model")
  equipmentSerialNumber     String   @unique @map("equipment_serial_number")
  range                     String  
  installationQualification     DateTime  @map("installation_qualification") 
  operationalQualification      DateTime  @map("operational_qualification")  
  performanceQualification      DateTime  @map("performance_qualification") 
  status                    EquipmentStatus @default(ACTIVE)
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")
  
  // Relations
  calibrationRecords        CalibrationRecord[]
  performanceRecords        PerformanceRecord[]
  maintenanceRecords        MaintenanceRecord[]
  incidentRecords           IncidentRecord[]
  
  @@map("equipments")
  @@index([equipmentName])
  @@index([status])
}

model CalibrationRecord {
  id                    String   @id @default(cuid())
  equipmentId           String   @map("equipment_id")
  dateOfCalibration     DateTime @map("date_of_calibration")
  dueDate               DateTime @map("due_date")
  calibrationResult     CalibrationResult @map("calibration_result")
  certificateNo         String   @map("certificate_no")
  certificateFile       String?  @map("certificate_file")   
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")
  
  // Relation
  equipment             Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  
  @@map("calibration_records")
  @@index([equipmentId])
  @@index([dateOfCalibration])
  @@index([dueDate])
}

model PerformanceRecord {
  id                        String   @id @default(cuid())
  equipmentId               String   @map("equipment_id")
  dateOfPerformanceCheck    DateTime @map("date_of_performance_check")
  nextPerformanceCheck      DateTime @map("next_performance_check")
  performanceCheckReportNo  String   @map("performance_check_report_no")
  result                    PerformanceResult
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")
  
  // Relation
  equipment                 Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  
  @@map("performance_records")
  @@index([equipmentId])
  @@index([dateOfPerformanceCheck])
  @@index([nextPerformanceCheck])
}

model MaintenanceRecord {
  id                              String   @id @default(cuid())
  equipmentId                     String   @map("equipment_id")
  plannedDateOfMaintenance        DateTime @map("planned_date_of_maintenance")
  conditionBasedNextMaintenance   DateTime? @map("condition_based_next_maintenance")
  status                          MaintenanceStatus
  remark                          String?  @db.Text
  createdAt                       DateTime @default(now()) @map("created_at")
  updatedAt                       DateTime @updatedAt @map("updated_at")

  // Relation
  equipment                       Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  
  @@map("maintenance_records")
  @@index([equipmentId])
  @@index([plannedDateOfMaintenance])
  @@index([status])
}

model IncidentRecord {
  id                      String   @id @default(cuid())
  equipmentId             String   @map("equipment_id")
  dateOfFailure           DateTime @map("date_of_failure")
  typesOfProblemsObserved String   @db.Text @map("types_of_problems_observed")
  causesOfFailures        String   @db.Text @map("causes_of_failures")
  correctiveActionTaken   String   @db.Text @map("corrective_action_taken")
  presentStatus           IncidentStatus @map("present_status")
  statusDate              DateTime @map("status_date")
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")
  
  // Relation
  equipment               Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  
  @@map("incident_records")
  @@index([equipmentId])
  @@index([dateOfFailure])
  @@index([presentStatus])
}


